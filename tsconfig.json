{
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,
    "declarationDir": "dist",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "outDir": "dist",
    "pretty": true,
    "paths": {
      "@/*": ["./*"],
      "@/consts": ["./constants.ts"],
      "@/types": ["./types.ts"]
    },
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2015"
  },
  "exclude": ["dist", "node_modules", "package-lock.json"],
  "include": ["src"]
}
